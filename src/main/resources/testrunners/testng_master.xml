<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="OpenCart Regression Suite" verbose="3" thread-count="4" parallel="tests">
 
    <test name="Login Page Test_firefox">
	  <parameter name="browser" value="firefox"></parameter>
    <classes>
      <class name="com.qa.opencart.tests.LoginPageTest"/>
    </classes>
  </test> 
  
  
    <test name="Login Page Test_chrome">
	  <parameter name="browser" value="chrome"></parameter>
    <classes>
      <class name="com.qa.opencart.tests.LoginPageTest"/>
    </classes>
  </test> 
  
  
    <test name="Login Page Test_Safari">
	  <parameter name="browser" value="safari"></parameter>
    <classes>
      <class name="com.qa.opencart.tests.LoginPageTest"/>
    </classes>
  </test> 
  
 
    <test name="Accounts Page Test_Edge">
	  <parameter name="browser" value="edge"></parameter>
    <classes>
        <class name="com.qa.opencart.tests.AccountsPageTest"/>
    </classes>
  </test> 
  
   <test name="Accounts Page Test_firefox">
	  <parameter name="browser" value="firefox"></parameter>
    <classes>
        <class name="com.qa.opencart.tests.AccountsPageTest"/>
    </classes>
  </test> 
  
  
    <test name="Accounts Page Test_chrome">
	  <parameter name="browser" value="chrome"></parameter>
    <classes>
        <class name="com.qa.opencart.tests.AccountsPageTest"/>
    </classes>
  </test> 
  
  
    <test name="Accounts Page Test_Safari">
	  <parameter name="browser" value="safari"></parameter>
    <classes>
        <class name="com.qa.opencart.tests.AccountsPageTest"/>
    </classes>
  </test> 
  
  
    <test name="Accounts Page Test_Edge">
	  <parameter name="browser" value="edge"></parameter>
    <classes>
      <class name="com.qa.opencart.tests.AccountsPageTest"/>
    </classes>
  </test> 
  
  
</suite> 
